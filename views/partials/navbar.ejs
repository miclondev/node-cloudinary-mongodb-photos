                        <a class="nav-link" href="/login" data-toggle="modal" data-target="#responsive-modal">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-success" href="/register">Sign up</a>
                    </li>
                    <% } else { %>

                        <li class="nav-item center-with-flex user-icons">
                            <a href="/user/cart">
                                <i class="fa fa-shopping-basket"></i>
