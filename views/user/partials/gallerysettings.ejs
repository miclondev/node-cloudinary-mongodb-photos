<div class="tab-pane" id="gallery" role="tabpanel">
    <div class="card-body">

        <form action="/user?_method=PUT" method="POST" class="form-horizontal form-material">
            <div class="form-group">

                <label class="col-md-12">Ad Gallery Display Name</label>
                <div class="col-md-12">
                    <input name="user[gallery][name]" type="text" placeholder="enter full name" value="<%= user.fullname %>" class="form-control form-control-line">
                </div>
            </div>
            <div class="form-group">
                <label for="example-email" class="col-md-12">Ad Gallery Title</label>
                <div class="col-md-12">
                    <input name="user[gallery][title]" type="email" value="<%= user.email %>" placeholder="johnathan@admin.com" class="form-control form-control-line"
                        name="example-email">
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-success">Update Profile</button>
                </div>
            </div>
        </form>
    </div>
</div>