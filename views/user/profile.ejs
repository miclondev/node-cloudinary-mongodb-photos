                <!-- Row -->
                <div class="row">
                    <!-- Column -->
                    <div class="col-lg-4 col-xlg-3 col-md-5">
                        <div class="card">
                            <div class="card-body">
                                <center class="m-t-30 profile-info">

                                    <form action="/user/profile-image?_method=PUT" method="POST" id="update-form" enctype="multipart/form-data">
                                        <input type="file" name="image" id="image-selector" style="width: 0px;height: 0px;overflow: hidden;">
                                    </form>

                                    <div class="profile-image" id="upload-div" style="display: none;">
                                        <i class="fa fa-upload"></i>
                                        <p>change image</p>

                                    </div>


                                    <% if(user.image.name){ %>
                                        <img id="profile-picture" src="http://res.cloudinary.com/adgallerytz/image/upload/c_scale,w_200/c_crop,g_faces:center,h_150,w_150/user/<%= user.image.name %>"
                                            class="img-circle" width="150">
        
                                        <% }else{ %>
                                            <img id="profile-picture" src="http://res.cloudinary.com/adgallerytz/image/upload/c_scale,w_150/c_crop,g_faces:center,h_150,w_150/user-icon-image-placeholder.jpg"
                                                class="img-circle" width="150" height="150">
                                                <span style=" position: absolute; float: right; right: 124px; color: black; top: 177px;">upload Image</span>
                                            <% } %>



                                                <h4 class="card-title m-t-10">
                                                    <%= user.fullname %>
                                                </h4>
                                                <h6 class="card-subtitle">Photographer and videographer</h6>
                                                <div class="row text-center justify-content-md-center">
                                                    <div class="col-4">
                                                        <a href="javascript:void(0)" class="link">
                                                            <i class="icon-people"></i>
                                                            <font class="font-medium">12</font>
                                                        </a>
                                                    </div>
                                                    <div class="col-4">
                                                        <a href="javascript:void(0)" class="link">
                                                            <i class="icon-picture"></i>
                                                            <font class="font-medium">54</font>
                                                        </a>
                                                    </div>
                                                </div>
                                </center>
                            </div>
                            <div>
                                <hr> </div>
                            <div class="card-body">
                                <small class="text-muted">Email address </small>
                                <h6>
                                    <%= user.email %>
                                </h6>
                                <small class="text-muted p-t-30 db">Phone</small>
                                <h6>
                                    <%= user.phone %>
                                </h6>
                                <small class="text-muted p-t-30 db">Address</small>
                                <h6>71 Pilgrim Avenue Chevy Chase, MD 20815</h6>

                                <small class="text-muted p-t-30 db">Social Profile</small>
                                <br>
                                <a class="btn btn-circle btn-secondary">
                                    <i class="fa fa-facebook"></i>
                                </a>
                                <a class="btn btn-circle btn-secondary">
                                    <i class="fa fa-twitter"></i>
                                </a>
                                <a class="btn btn-circle btn-secondary">
                                    <i class="fa fa-youtube"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- Column -->
                    <!-- Column -->
                    <div class="col-lg-8 col-xlg-9 col-md-7">
                        <div class="card">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs profile-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#profile" role="tab">Profile </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#gallery" role="tab">Gallery Settings</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#settings" role="tab">Account Settings</a>
                                </li>
                            </ul>
                            <!-- Tab panes -->
                            <div class="tab-content">

                                <% include ./partials/profile %>
                                    <% include ./partials/gallerysettings %>
                                        <% include ./partials/settings %>
                            </div>
                        </div>
                    </div>
                    <!-- Column -->
                </div>
                <!-- Row -->
                <!-- ============================================================== -->
                <!-- End PAge Content -->
